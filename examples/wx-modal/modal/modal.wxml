
<view class="modal-container" hidden="{{!shown}}">
    <view class="modal">
        <view class="title">{{detail.title}}</view>
        <view class="content">{{detail.content}}</view>
        <view class="btns">
            <button bindtap="onConfirm">Confirm</button>
            <button bindtap="onCancel">Cancel</button>
            <button bindtap="onClose">Close</button>
        </view>
    </view>
</view>