{
  "name": "mp-modal",
  "version": "1.0.0",
  "description": "A helper cross-platform tool for muti-miniprograms that can more convenient to use modal components.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "fix": "tslint -c tslint.json 'src/**/*.ts' --fix",
